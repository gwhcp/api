[Unit]
Description=Celery Service
After=network.target

[Service]
Type=forking
User=gwhcp
Group=gwhcp

EnvironmentFile=-[SYSTEM-CONFD]celery
WorkingDirectory=[DAEMON-WORKER]

ExecStart=[SYSTEM-SUDO] [SYSTEM-SH] -c '${CELERY_BIN} multi start ${CELERYD_NODES} -Q ${CELERY_QUEUE_IP} \
  -A application --pidfile=${CELERYD_PID_FILE} \
  --logfile=${CELERYD_LOG_FILE} --loglevel=${CELERYD_LOG_LEVEL} ${CELERYD_OPTS}'

ExecStop=[SYSTEM-SUDO] [SYSTEM-SH] -c '${CELERY_BIN} multi stopwait ${CELERYD_NODES} \
  --pidfile=${CELERYD_PID_FILE}'

ExecReload=[SYSTEM-SUDO] [SYSTEM-SH] -c '${CELERY_BIN} multi restart ${CELERYD_NODES} -Q ${CELERY_QUEUE_IP} \
  -A application --pidfile=${CELERYD_PID_FILE} \
  --logfile=${CELERYD_LOG_FILE} --loglevel=${CELERYD_LOG_LEVEL} ${CELERYD_OPTS}'

[Install]
WantedBy=multi-user.target